j:Notify("Mirage UI","Window opened!",2,"Check")
end
local function closeAnim()
f(m,{Size=UDim2.new(0,0,0,0),BackgroundTransparency=1},.4,Enum.EasingStyle.Quart,Enum.EasingDirection.In)
f(mst,{Transparency=1},.3)f(mgl,{ImageTransparency=1},.3)
f(tb,{Rotation=0},.5,Enum.EasingStyle.Back)f(tbst,{Thickness=2,Transparency=.5},.3)
task.delay(.4,function()m.Visible=false end)
end
tb.MouseButton1Click:Connect(function()open=not open if open then openAnim()else closeAnim()end end)
cb.MouseButton1Click:Connect(function()open=false closeAnim()end)
tb.MouseEnter:Connect(function()f(tb,{Size=UDim2.new(0,55,0,55)},.3,Enum.EasingStyle.Back)f(tbst,{Transparency=.2},.2)f(tbgl,{ImageTransparency=.5,Size=UDim2.new(1,45,1,45)},.3)end)
