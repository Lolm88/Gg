local function openAnim()
m.Visible=true m.Size=UDim2.new(0,0,0,0)m.BackgroundTransparency=1
f(m,{Size=UDim2.new(0,620,0,460),BackgroundTransparency=0},.5,Enum.EasingStyle.Back)
