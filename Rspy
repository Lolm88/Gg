function t:Toggle(text,icon,default,callback)
local on=default or false
local tg=g("Frame",{Size=UDim2.new(1,-10,0,44),BackgroundColor3=Color3.fromRGB(20,24,32),Parent=tcont})
h(tg,10)local tgst=i(tg,on and Color3.fromRGB(100,150,255)or Color3.fromRGB(50,60,80))tgst.Transparency=on and.3 or.5
local tggl=glow(tg,Color3.fromRGB(80,120,200),25)tggl.ImageTransparency=on and.8 or 1
g("ImageLabel",{Size=UDim2.new(0,20,0,20),Position=UDim2.new(0,14,0.5,-10),BackgroundTransparency=1,Image=e[icon]or e.Check,ImageColor3=Color3.fromRGB(100,150,255),Parent=tg})
