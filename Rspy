local sw=g("Frame",{Size=UDim2.new(0,52,0,28),Position=UDim2.new(1,-66,0.5,-14),BackgroundColor3=on and Color3.fromRGB(80,120,200)or Color3.fromRGB(35,40,50),Parent=tg})
h(sw,14)local swst=i(sw,on and Color3.fromRGB(100,150,255)or Color3.fromRGB(50,60,80))swst.Transparency=.5
local kn=g("Frame",{Size=UDim2.new(0,22,0,22),Position=on and UDim2.new(1,-25,0.5,-11)or UDim2.new(0,3,0.5,-11),BackgroundColor3=Color3.fromRGB(255,255,255),Parent=sw})
h(kn,11)
local kngl=glow(kn,Color3.fromRGB(255,255,255),15)kngl.ImageTransparency=on and.6 or 1
local chk=g("ImageLabel",{Size=UDim2.new(0,12,0,12),Position=UDim2.new(0.5,-6,0.5,-6),BackgroundTransparency=1,Image=e.Check,ImageColor3=on and Color3.fromRGB(80,120,200)or Color3.fromRGB(60,70,90),ImageTransparency=on and 0 or 1,Parent=kn})
local btn=g("TextButton",{Size=UDim2.new(1,0,1,0),BackgroundTransparency=1,Text="",Parent=tg})
btn.MouseButton1Click:Connect(function()
on=not on
f(sw,{BackgroundColor3=on and Color3.fromRGB(80,120,200)or Color3.fromRGB(35,40,50)},.25,Enum.EasingStyle.Quart)
f(swst,{Color=on and Color3.fromRGB(100,150,255)or Color3.fromRGB(50,60,80)},.2)
f(kn,{Position=on and UDim2.new(1,-25,0.5,-11)or UDim2.new(0,3,0.5,-11)},.25,Enum.EasingStyle.Back)
f(kngl,{ImageTransparency=on and.6 or 1},.25)
f(chk,{ImageColor3=on and Color3.fromRGB(80,120,200)or Color3.fromRGB(60,70,90),ImageTransparency=on and 0 or 1},.2)
f(tgst,{Color=on and Color3.fromRGB(100,150,255)or Color3.fromRGB(50,60,80),Transparency=on and.3 or.5},.2)
f(tggl,{ImageTransparency=on and.8 or 1},.25)
if callback then callback(on)end
end)
btn.MouseEnter:Connect(function()f(tg,{BackgroundColor3=Color3.fromRGB(25,30,40)},.2)end)
btn.MouseLeave:Connect(function()f(tg,{BackgroundColor3=Color3.fromRGB(20,24,32)},.2)end)
return{Set=function(v)on=v f(sw,{BackgroundColor3=on and Color3.fromRGB(80,120,200)or Color3.fromRGB(35,40,50)},.2)f(kn,{Position=on and UDim2.new(1,-25,0.5,-11)or UDim2.new(0,3,0.5,-11)},.2)f(chk,{ImageTransparency=on and 0 or 1},.2)f(tgst,{Color=on and Color3.fromRGB(100,150,255)or Color3.fromRGB(50,60,80)},.2)end,Get=function()return on end}
end
function t:Slider(text,icon,min,max,default,callback)
local val=default or min
local sl=g("Frame",{Size=UDim2.new(1,-10,0,65),BackgroundColor3=Color3.fromRGB(20,24,32),Parent=tcont})
h(sl,10)local slst=i(sl,Color3.fromRGB(50,60,80))
g("ImageLabel",{Size=UDim2.new(0,20,0,20),Position=UDim2.new(0,14,0,12),BackgroundTransparency=1,Image=e[icon]or e.Settings,ImageColor3=Color3.fromRGB(100,150,255),Parent=sl})
g("TextLabel",{Size=UDim2.new(1,-110,0,22),Position=UDim2.new(0,42,0,10),BackgroundTransparency=1,Text=text or"Slider",TextColor3=Color3.fromRGB(220,230,255),TextSize=13,Font=Enum.Font.GothamBold,TextXAlignment=Enum.TextXAlignment.Left,Parent=sl})
local vlbl=g("TextLabel",{Size=UDim2.new(0,55,0,24),Position=UDim2.new(1,-69,0,10),BackgroundColor3=Color3.fromRGB(30,35,45),Text=tostring(val),TextColor3=Color3.fromRGB(100,150,255),TextSize=12,Font=Enum.Font.GothamBold,Parent=sl})
h(vlbl,8)i(vlbl,Color3.fromRGB(60,80,120))
local bar=g("Frame",{Size=UDim2.new(1,-28,0,10),Position=UDim2.new(0,14,1,-22),BackgroundColor3=Color3.fromRGB(30,35,45),Parent=sl})
h(bar,5)i(bar,Color3.fromRGB(50,60,80))
local fill=g("Frame",{Size=UDim2.new((val-min)/(max-min),0,1,0),BackgroundColor3=Color3.fromRGB(100,150,255),Parent=bar})
h(fill,5)
local fg=Instance.new("UIGradient",fill)fg.Color=ColorSequence.new{ColorSequenceKeypoint.new(0,Color3.fromRGB(100,150,255)),ColorSequenceKeypoint.new(1,Color3.fromRGB(150,100,255))}
local fgl=glow(fill,Color3.fromRGB(100,150,255),15)fgl.ImageTransparency=.7
local knob=g("Frame",{Size=UDim2.new(0,18,0,18),Position=UDim2.new((val-min)/(max-min),-9,0.5,-9),BackgroundColor3=Color3.fromRGB(255,255,255),ZIndex=5,Parent=bar})
h(knob,9)local kgl=glow(knob,Color3.fromRGB(100,150,255),20)kgl.ImageTransparency=.6
local sbtn=g("TextButton",{Size=UDim2.new(1,20,1,20),Position=UDim2.new(0,-10,0,-10),BackgroundTransparency=1,Text="",ZIndex=6,Parent=bar})
local dragging=false
local function upd(inp)
local mx=inp.Position.X
local bx=bar.AbsolutePosition.X
local bw=bar.AbsoluteSize.X
local pct=math.clamp((mx-bx)/bw,0,1)
val=math.floor(min+(max-min)*pct)
vlbl.Text=tostring(val)
f(fill,{Size=UDim2.new(pct,0,1,0)},.05)
f(knob,{Position=UDim2.new(pct,-9,0.5,-9)},.05)
if callback then callback(val)end
end
sbtn.MouseButton1Down:Connect(function(x,y)dragging=true f(knob,{Size=UDim2.new(0,22,0,22)},.15,Enum.EasingStyle.Back)f(kgl,{ImageTransparency=.4},.15)f(slst,{Color=Color3.fromRGB(100,150,255),Transparency=.3},.15)end)
b.InputEnded:Connect(function(inp)if inp.UserInputType==Enum.UserInputType.MouseButton1 and dragging then dragging=false f(knob,{Size=UDim2.new(0,18,0,18)},.15)f(kgl,{ImageTransparency=.6},.15)f(slst,{Color=Color3.fromRGB(50,60,80),Transparency=.5},.15)end end)
b.InputChanged:Connect(function(inp)if dragging and inp.UserInputType==Enum.UserInputType.MouseMovement then upd(inp)end end)
sbtn.MouseEnter:Connect(function()f(sl,{BackgroundColor3=Color3.fromRGB(25,30,40)},.2)end)
sbtn.MouseLeave:Connect(function()if not dragging then f(sl,{BackgroundColor3=Color3.fromRGB(20,24,32)},.2)end end)
return{Set=function(v)val=v vlbl.Text=tostring(v)local pct=(v-min)/(max-min)f(fill,{Size=UDim2.new(pct,0,1,0)},.2)f(knob,{Position=UDim2.new(pct,-9,0.5,-9)},.2)end,Get=function()return val end}
end
function t:Dropdown(text,icon,options,default,callback)
local sel=default or options[1]or""
local expanded=false
local dd=g("Frame",{Size=UDim2.new(1,-10,0,44),BackgroundColor3=Color3.fromRGB(20,24,32),ClipsDescendants=true,Parent=tcont})
h(dd,10)local ddst=i(dd,Color3.fromRGB(50,60,80))
g("ImageLabel",{Size=UDim2.new(0,20,0,20),Position=UDim2.new(0,14,0,12),BackgroundTransparency=1,Image=e[icon]or e.Settings,ImageColor3=Color3.fromRGB(100,150,255),Parent=dd})
g("TextLabel",{Size=UDim2.new(1,-150,0,44),Position=UDim2.new(0,42,0,0),BackgroundTransparency=1,Text=text or"Dropdown",TextColor3=Color3.fromRGB(220,230,255),TextSize=13,Font=Enum.Font.GothamBold,TextXAlignment=Enum.TextXAlignment.Left,Parent=dd})
local selv=g("TextLabel",{Size=UDim2.new(0,80,0,26),Position=UDim2.new(1,-115,0,9),BackgroundColor3=Color3.fromRGB(30,35,45),Text=sel,TextColor3=Color3.fromRGB(150,170,220),TextSize=11,Font=Enum.Font.Gotham,Parent=dd})
h(selv,8)
local arr=g("ImageLabel",{Size=UDim2.new(0,14,0,14),Position=UDim2.new(1,-28,0,15),BackgroundTransparency=1,Image="rbxassetid://7733717504",ImageColor3=Color3.fromRGB(100,150,255),Rotation=90,Parent=dd})
local optc=g("Frame",{Size=UDim2.new(1,-10,0,0),Position=UDim2.new(0,5,0,48),BackgroundTransparency=1,Parent=dd})
local optl=g("UIListLayout",{Padding=UDim.new(0,4),SortOrder=Enum.SortOrder.LayoutOrder,Parent=optc})
for idx,opt in ipairs(options)do
local ob=g("TextButton",{Size=UDim2.new(1,0,0,32),BackgroundColor3=Color3.fromRGB(25,30,40),Text="",AutoButtonColor=false,Parent=optc})
h(ob,8)
g("TextLabel",{Size=UDim2.new(1,-20,1,0),Position=UDim2.new(0,10,0,0),BackgroundTransparency=1,Text=opt,TextColor3=Color3.fromRGB(180,190,220),TextSize=12,Font=Enum.Font.Gotham,TextXAlignment=Enum.TextXAlignment.Left,Parent=ob})
ob.MouseEnter:Connect(function()f(ob,{BackgroundColor3=Color3.fromRGB(60,90,150)},.15)end)
ob.MouseLeave:Connect(function()f(ob,{BackgroundColor3=Color3.fromRGB(25,30,40)},.15)end)
ob.MouseButton1Click:Connect(function()sel=opt selv.Text=opt expanded=false f(dd,{Size=UDim2.new(1,-10,0,44)},.25,Enum.EasingStyle.Back)f(arr,{Rotation=90},.2)if callback then callback(sel)end end)
end
local hbtn=g("TextButton",{Size=UDim2.new(1,0,0,44),BackgroundTransparency=1,Text="",Parent=dd})
hbtn.MouseButton1Click:Connect(function()
expanded=not expanded
local h=expanded and(48+#options*36)or 44
f(dd,{Size=UDim2.new(1,-10,0,h)},.3,Enum.EasingStyle.Back)
f(arr,{Rotation=expanded and 270 or 90},.25)
f(ddst,{Color=expanded and Color3.fromRGB(100,150,255)or Color3.fromRGB(50,60,80)},.2)
end)
return{Set=function(v)sel=v selv.Text=v end,Get=function()return sel end}
end
function t:Label(text)
local lb=g("TextLabel",{Size=UDim2.new(1,-10,0,28),BackgroundTransparency=1,Text=text or"Label",TextColor3=Color3.fromRGB(100,120,160),TextSize=12,Font=Enum.Font.GothamBold,TextXAlignment=Enum.TextXAlignment.Left,Parent=tcont})
return lb
end
function t:Separator()
local sp=g("Frame",{Size=UDim2.new(1,-30,0,2),BackgroundColor3=Color3.fromRGB(40,50,70),Parent=tcont})
h(sp,1)
local spg=Instance.new("UIGradient",sp)spg.Color=ColorSequence.new{ColorSequenceKeypoint.new(0,Color3.fromRGB(40,50,70)),ColorSequenceKeypoint.new(.5,Color3.fromRGB(100,150,255)),ColorSequenceKeypoint.new(1,Color3.fromRGB(40,50,70))}spg.Transparency=NumberSequence.new{NumberSequenceKeypoint.new(0,1),NumberSequenceKeypoint.new(.5,0),NumberSequenceKeypoint.new(1,1)}
return sp
end
function t:Input(text,icon,placeholder,callback)
local inp=g("Frame",{Size=UDim2.new(1,-10,0,44),BackgroundColor3=Color3.fromRGB(20,24,32),Parent=tcont})
h(inp,10)local ist=i(inp,Color3.fromRGB(50,60,80))
g("ImageLabel",{Size=UDim2.new(0,20,0,20),Position=UDim2.new(0,14,0.5,-10),BackgroundTransparency=1,Image=e[icon]or e.Search,ImageColor3=Color3.fromRGB(100,150,255),Parent=inp})
g("TextLabel",{Size=UDim2.new(0,80,1,0),Position=UDim2.new(0,42,0,0),BackgroundTransparency=1,Text=text or"Input",TextColor3=Color3.fromRGB(220,230,255),TextSize=13,Font=Enum.Font.GothamBold,TextXAlignment=Enum.TextXAlignment.Left,Parent=inp})
local tb=g("TextBox",{Size=UDim2.new(1,-150,0,28),Position=UDim2.new(0,125,0.5,-14),BackgroundColor3=Color3.fromRGB(30,35,45),Text="",PlaceholderText=placeholder or"Enter...",TextColor3=Color3.fromRGB(220,230,255),PlaceholderColor3=Color3.fromRGB(80,90,120),TextSize=12,Font=Enum.Font.Gotham,ClearTextOnFocus=false,Parent=inp})
h(tb,8)local tbst=i(tb,Color3.fromRGB(50,60,80))
tb.Focused:Connect(function()f(tbst,{Color=Color3.fromRGB(100,150,255)},.2)f(ist,{Color=Color3.fromRGB(100,150,255),Transparency=.3},.2)end)
tb.FocusLost:Connect(function(enter)f(tbst,{Color=Color3.fromRGB(50,60,80)},.2)f(ist,{Color=Color3.fromRGB(50,60,80),Transparency=.5},.2)if enter and callback then callback(tb.Text)end end)
return{Set=function(v)tb.Text=v end,Get=function()return tb.Text end}
end
return t
end
function w:Notify(title,text,dur,icon)return j:Notify(title,text,dur,icon)end
return w
end
return j
